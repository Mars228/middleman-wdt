<!doctype html>
<!--[if IE 9] <html class="no-js lt-ie10 lt-ie9" lang="<%= "#{data.site.lang}" %>"><![endif]-->
<!--[if lt IE 10] <html class="no-js lt-ie10" lang="<%= "#{data.site.lang}" %>"><![endif]-->
<!--[if !IE]><!-->
<html class="no-js" lang="<%= "#{data.site.lang}" %>">
<!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta name="description" content="<%= current_page.data.description %>">
    <meta name="keywords" content="<%= current_page.data.keywords %>">
    <meta content="index,follow" name="robots">

    <link href="humans.txt" rel="author" type="text/plain">
    <link rel="shortcut icon" href="/assets/img/favicon.ico">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title>
      <% if data.site.title %>
        <%= data.site.title %> / <%= current_page.data.title %>
      <% else %>
        <%= data.site.title %>
      <% end %>
    </title>

    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/bootstrap/3.3.6/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/prism/1.5.1/themes/prism-okaidia.css" %>
    <%= stylesheet_link_tag "fonts" %>
    <%= stylesheet_link_tag "style" %>

    <!--[if lt IE 9]>
      <%= javascript_include_tag "https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js" %>
      <%= javascript_include_tag "https://cdn.jsdelivr.net/respond/1.4.2/respond.min.js" %>
    <![endif]-->
    
  </head>

  <body class="<%= page_classes %>" data-spy="scroll">
    <!--[if lt IE 8]>
      <%= data.site.oldie %>
    <![endif]-->
    <%= yield %>
    
    <%= javascript_include_tag "https://cdn.jsdelivr.net/jquery/2.2.3/jquery.min.js" %>
    <%= javascript_include_tag "https://cdn.jsdelivr.net/jquery.easing/1.3/jquery.easing.1.3.min.js" %>
    <%= javascript_include_tag "https://cdn.jsdelivr.net/bootstrap/3.3.6/js/bootstrap.min.js" %>
    <%= javascript_include_tag "https://cdn.jsdelivr.net/jquery.scrollto/2.1.2/jquery.scrollTo.min.js" %>
  
    <%= javascript_include_tag "https://cdn.jsdelivr.net/prism/1.5.1/prism.js" %>
    <%= javascript_include_tag "site" %>

    <%# Google Analytics %>
    <% if build? %>
    <% if data.site.google_analytics_id %>
      <script>
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '<%= "#{data.site.google_analytics_id}" %>']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>
    <% end %>
    <% end %>


  </body>
</html>